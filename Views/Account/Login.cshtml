@model PimUrbanGreen.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid text-center">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-6 col-sm-12">

            <div class="card border-success mb-3">
                <div class="card-header"><img id="icone01" src="images/ecommerce_icon.png" alt="img-ecommerce"></div>
                <div class="card-body">
                    <h5 class="card-title">Login</h5>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Usuário</label>
                            <input asp-for="NomeUsuario" class="form-control" placeholder="Digite aqui o seu usuário.">
                        </div>
                        <div>
                            <label class="form-label">Senha</label>
                            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite aqui a sua senha.">
                        </div>
                        <button class="btn btn-success" type="submit">Entrar</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
