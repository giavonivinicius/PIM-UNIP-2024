<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PimUrbanGreen.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
</head>
<body>

    <header>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <div class="row">
            <div class="col-2"><img id="logotipoImg" src="@Url.Content("~/images/logo-urban-green-011.png")" alt="logo-urban-green"></div>
            <div class="col-10"><a class="navbar-brand" asp-area="" asp-controller="Index" asp-action="Index" id="logotipo">Urban Green</a></div>
        </div>
      </div>
    </nav>
    </header>
    

    <div class="containe-fluid vh-100 d-flex w-100 justify-content-center align-items-center">
        <main role="main" class="pb-3 vh-100 d-flex w-100 justify-content-center align-items-center">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            &copy; Todos os direitos reservados-2024
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pedidos.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
